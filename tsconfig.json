{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@comps/*": [
        "src/components/*"
      ],
      "@const": [
        "src/scripts/constants"
      ],
      "@utils": [
        "src/scripts/utils"
      ],
      "@styles/*": [
        "src/styles/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}